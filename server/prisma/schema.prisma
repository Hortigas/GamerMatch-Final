generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model public_user {
  id            Int      @id(map: "user_pk") @default(dbgenerated("nextval('\"public.user_id_seq\"'::regclass)"))
  user_name     String   @db.VarChar(50)
  user_email    String   @unique @db.VarChar(50)
  user_password String   @db.VarChar(64)
  providerAuth  Boolean?

  @@map("public.user")
}

model public_message {
  id               Int      @id(map: "message_pk") @default(dbgenerated("nextval('\"public.message_id_seq\"'::regclass)"))
  message_content  String   @db.VarChar(255)
  timestamp        DateTime @default(dbgenerated("'2022-02-04 23:12:48.67174'::timestamp without time zone")) @db.Timestamp(6)
  user_id_sender   Int
  user_id_receiver Int

  @@map("public.message")
}
